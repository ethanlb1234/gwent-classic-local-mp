{
  "name": "gwent-classic",
  "version": "1.0.0",
  "description": "Play the original Gwent minigame from The Witcher 3 - Local Multiplayer Edition",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "gwent",
    "card-game",
    "witcher",
    "multiplayer"
  ],
  "author": "Arun Sundaram",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.gwent.classic",
    "productName": "Gwent Classic",
    "files": [
      "**/*",
      "!**/*.md",
      "!.git/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.games",
      "icon": "img/icons/deck_shield_monsters.png"
    },
    "win": {
      "target": "nsis",
      "icon": "img/icons/deck_shield_monsters.png"
    },
    "linux": {
      "target": "AppImage",
      "category": "Game"
    }
  }
}
